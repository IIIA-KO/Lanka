{
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://+:4308",
        "Certificate": {
          "Path": "certificate-path-relative-to-container",
          "Password": "your-certificate-password"
        }
      }
    }
  },
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      "ValidIssuers": [
        "your-valid-issuers"
      ]
    },
    "MetadataAddress": "metadata-url",
    "RequireHttpsMetadata": false
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://lanka.seq:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Lanka.Gateway"
    }
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "<your-otel-exporter-endpoint>",
  "ReverseProxy": {
    "Routes": {},
    "Cluster": {}
  },
  "Cors": {
    "AllowedOrigins": [
      "<your-client-fqdn>"
    ]
  }
}
